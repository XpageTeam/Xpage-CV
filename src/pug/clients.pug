										td 
											div 09:13:35
								tr
									td
										.ul-user
											figure.ul-user__img
												img(src="img/photos/autist.jpg")
												<!-- user-dot--absence если отсутствует -->
												.user-dot.user-dot--absence
											.ul-user__name Вадим Дибров
									td 
										div Разнорабочий
									td 
										div Управление проектами
