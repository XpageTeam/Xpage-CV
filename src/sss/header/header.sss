@import "h-menu.sss"

.head
	background: #fff
	padding: em(25) 0
	box-shadow: var(--default-shadow)
	position: sticky
	top: 0
	z-index: 2

	&__wrap
		display: flex
		justify-content: space-between
		align-items: center

.logo
	display: inline-block
	vertical-align: middle
	margin-right: 50px

	&:last-chield
		margin-right: 0
		

	img
		display: block

.h-btns
	display: flex

	&__item	

		&:not(:last-child)
			margin-right: 16px

@media (max-width: 1400px)
	.head
		padding: 15px 0